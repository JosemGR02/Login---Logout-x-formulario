<div class="container bg-light p-4">

    <div class="container mt-3">
        <h1 class="alert alert-success">
            Bienvenido, 
            {{#each usuario}}
                <span>{{nombre}}</span>
                {{/each}}
            
                <button class="btn btn-warning float-right mt-2" onclick="location.href='/logout'">
                    Desloguear
                </button>
        </h1>
    </div>

    <section>
        <h2 class="text-primary">Ingrese producto</h2>
        {{> form metodo='POST' action='/productos' }}
    </section>

    <section class="mt-5">
        <h2 class="text-danger">Historial</h2>
        {{#unless productos}}
        <h4 class="text-bg-danger p-3">no se encontraron datos</h4>
        {{else}}
        <table class="table table-dark">
            <thead>
                <tr class="text-warning">
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Foto</th>
                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                <tr>
                    <td>
                        {{producto}}
                    </td>
                    <td>
                        {{precio}}
                    </td>
                    <td>
                        <img style="height: 3rem;" src="{{urlImagen}}" alt="imagen producto">
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
        {{/unless}}
    </section>
</div>